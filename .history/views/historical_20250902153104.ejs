<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Historical Data</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
  
</head>
<body>
  <div class="container-fluid p-4">

    <!-- Topbar -->
    <div class="d-flex justify-content-between align-items-center mb-3">
      <button class="btn btn-outline-light" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu">
        â˜° Menu
      </button>
      <h3 class="fw-bold text-light">SMART TRAFFIC MANAGEMENT SYSTEM</h3>
      <div>MODE: <span class="badge bg-primary">AUTO</span> <span class="text-muted">MANUAL</span></div>
    </div>

    <!-- Offcanvas Sidebar -->
    <div class="offcanvas offcanvas-start offcanvas-dark" tabindex="-1" id="sidebarMenu">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title">Smart Traffic</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
      </div>
      <div class="offcanvas-body">
        <ul class="nav flex-column">
          <li class="nav-item"><a class="nav-link" href="/">Dashboard</a></li>
          <li class="nav-item"><a class="nav-link" href="/intersections">Intersections</a></li>
          <li class="nav-item"><a class="nav-link fw-bold" href="/historical">Historical Data</a></li>
        </ul>
      </div>
    </div>

    <!-- Main Content -->
    <div class="card p-3 shadow-sm">
      <h5 class="fw-bold mb-3">ðŸ“Š Historical Traffic Data</h5>
      
      <!-- Chart -->
      <canvas id="historyChart"></canvas>

      <!-- Stats -->
      <div class="d-flex justify-content-around mt-4">
        <div class="text-center">
          <h4 class="fw-bold text-info"><%= averageVehicles %></h4>
          <small class="text-muted">Avg Vehicles</small>
        </div>
        <div class="text-center">
          <h4 class="fw-bold text-success"><%= avgTime %></h4>
          <small class="text-muted">Avg Wait Time (min)</small>
        </div>
      </div>

      <!-- Actions -->
      <div class="mt-4 d-flex gap-2 justify-content-center">
        <button class="btn btn-success btn-custom" onclick="location.href='/signal'">Change to Green</button>
        <button class="btn btn-warning btn-custom" onclick="location.href='/pause'">Pause</button>
        <button class="btn btn-danger btn-custom" onclick="location.href='/stop'">Stop</button>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    const ctx = document.getElementById('historyChart');
    new Chart(ctx, {
      type: 'line',
      data: {
        labels: <%- JSON.stringify(labels) %>,
        datasets: [{
          label: 'Vehicles per Interval',
          data: <%- JSON.stringify(data) %>,
          borderColor: 'cyan',
          backgroundColor: 'rgba(0,255,255,0.1)',
          fill: true,
          tension: 0.3,
          pointRadius: 4,
          pointBackgroundColor: 'cyan'
        }]
      },
      options: { 
        responsive: true,
        plugins: { legend: { display: true, labels: { color: 'white' } } },
        scales: {
          x: { ticks: { color: '#ccc' } },
          y: { ticks: { color: '#ccc' } }
        }
      }
    });
  </script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Historical Data</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      
      <!-- Sidebar -->
      <div class="col-2 bg-light p-3">
        <h5 class="fw-bold mb-4">Smart Traffic</h5>
        <ul class="nav flex-column">
          <li class="nav-item"><a class="nav-link" href="/">Dashboard</a></li>
          <li class="nav-item"><a class="nav-link" href="/intersections">Intersections</a></li>
          <li class="nav-item"><a class="nav-link fw-bold" href="/historical">Historical Data</a></li>
        </ul>
      </div>

      <!-- Main Content -->
      <div class="col-10 p-4">
        <div class="d-flex justify-content-between mb-3">
          <h3 class="fw-bold">SMART TRAFFIC MANAGEMENT SYSTEM</h3>
          <div>MODE: <span class="badge bg-primary">AUTO</span> <span class="text-muted">MANUAL</span></div>
        </div>

        <div class="card p-3">
          <h5 class="fw-bold">HISTORICAL DATA</h5>
          <canvas id="historyChart"></canvas>
          <div class="d-flex justify-content-between mt-3">
            <div><h4 class="fw-bold"><%= averageVehicles %></h4> vehicles</div>
            <div><h4 class="fw-bold"><%= avgTime %></h4> min</div>
          </div>
          <button class="btn btn-primary mt-3">Change to Green</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    var ctx = document.getElementById('historyChart');
    new Chart(ctx, {
      type: 'line',
      data: {
        labels: <%- JSON.stringify(labels) %>,
        datasets: [{
          label: 'Vehicles',
          data: <%- JSON.stringify(data) %>,
          borderColor: 'blue',
          backgroundColor: 'rgba(0,0,255,0.1)',
          fill: true
        }]
      },
      options: { responsive: true }
    });
  </script>
</body>
</html>
